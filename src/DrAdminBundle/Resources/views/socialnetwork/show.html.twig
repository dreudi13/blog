{% extends 'DrAdminBundle::template/base.html.twig' %}

{% block body %}
    <h1>Socialnetwork</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ socialNetwork.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ socialNetwork.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ socialNetwork.link }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ socialNetwork.icon }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('socialnetwork_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('socialnetwork_edit', { 'id': socialNetwork.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
