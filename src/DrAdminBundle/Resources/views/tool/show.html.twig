{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tool</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tool.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tool.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tool.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tool_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tool_edit', { 'id': tool.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
