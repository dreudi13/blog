{% extends 'DrAdminBundle::template/base.html.twig' %}

{% block body %}
<div class="row image">
    <div class="column">
    <h1>Images list</h1>
    </div>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Image</th>
                <th>Alt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td><a href="{{ path('image_show', { 'id': image.id }) }}">{{ image.id }}</a></td>
                <td>{{ image.url }}</td>
                <td><img src="{{ image.url }}" alt=""></td>
                <td>{{ image.alt }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('image_show', { 'id': image.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('image_edit', { 'id': image.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('image_new') }}">Create a new image</a>
        </li>
    </ul>
</div>
{% endblock %}
